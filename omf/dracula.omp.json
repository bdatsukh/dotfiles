{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",

  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ff79c6",
          "properties": {
            "windows": " ",
            "macos": " ",
            "linux": " "
          },
          "style": "plain",
          "template": "{{ if .WSL }} {{else}}{{.Icon}}{{ end }}",
          "type": "os"
        },
        {
          "foreground": "#E06C75",
          "style": "plain",
          "template": "root <#ffffff>in</> ",
          "type": "root"
        },
        {
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": "{{ if .Writable }}<#bd93f9>{{ .Path }}</>{{else}}<#e91e63>{{ .Path }}</>{{ end }} ",
          "type": "path"
        },
        {
          "type": "project",
          "style": "plain",
          "foreground": "#98C379",
          "template": "{{ if .Error }}{{ .Error }}{{ else }}{{ if .Version }} {{.Version}}{{ end }}{{ end }} "
        },
        {
          "foreground": "#C678DD",
          "properties": {
            "fetch_status": true
          },
          "style": "plain",
          "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "git"
        },
        {
          "foreground": "#98C379",
          "properties": {
            "fetch_version": true
          },
          "style": "plain",
          "template": "\ue718 {{ .Full }} ",
          "type": "node"
        },
        {
          "type": "rust",
          "style": "plain",
          "foreground": "#98C379",
          "template": " {{ .Full }} "
        },
        {
          "type": "docker",
          "style": "plain",
          "foreground": "#98C379",
          "template": " {{ .Context }} "
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#a9ffb4",
          "style": "plain",
          "type": "text"
        },
        {
          "foreground": "#a9ffb4",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": "{{ .FormattedMs }}s ",
          "type": "executiontime"
        },
        {
          "properties": {
            "root_icon": "\uf292 "
          },
          "style": "diamond",
          "template": " \uf0e7 ",
          "type": "root"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#ff79c6",
          "foreground_templates": ["{{ if gt .Code 0 }}#e91e63{{ end }}"],
          "template": "\u279c ",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Folder }}",
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#ffb61f",
    "template": "\u279c "
  },
  "version": 2
}
